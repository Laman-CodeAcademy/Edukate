@using Edukate.ViewModels.CourseViewModel
@model CourseUpdateVM
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Name</label>
        <input asp-for="Rating" type="number" class="form-control">
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <select>
        @foreach (var instructor in ViewBag.Instructors)
        {
            <option value="@instructor.Id">@instructor</option>
        }
    </select>
    <div class="form-group">
        <label asp-for="Image">Name</label>
        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>